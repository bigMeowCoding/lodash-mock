{
  "compileOnSave": false,
  "include": ["./src/index.ts"],
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": false,
    "sourceMap": true,
    "declaration": true,
    "downlevelIteration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2015", "dom"]
  }
}
